<!DOCTYPE html>

<html>

  <head>
    <title>PicSwap Sandbox</title>

    <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    


    <script>

      function sendImage(){
        console.log("Send");

        $.post("/api/pictures", null, function( res){
          console.log(res);
        })

      }

      function getImage(){
        $.get("/api/pictures", null, function(res ){
          console.log(res);
        })
      }

      function deleteImage(){
        console.log("Delete");
      }


    </script>
  </head>

  <body>

    <div class="container-fluid">

      <h2>Image REST</h2>
      <div class='row'>
        <div class='col-md-12'>

          <div class='btn btn-success' onclick='getImage()'>Get Image</div>
          <div class='btn btn-success' onclick='sendImage()'>Send Image</div>
          <div class='btn btn-success' onclick='deleteImage()'>Delete Image</div>
          <hr />
          <div id='image'>Image Received here..</div>
        </div>
      </div>

    </div>

  </body>

</html>